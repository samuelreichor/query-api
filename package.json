{
  "name": "@query-api/source",
  "version": "0.0.0",
  "license": "MIT",
  "private": true,
  "scripts": {
    "typecheck": "nx run-many -t typecheck",
    "build": "nx run-many -t build",
    "lint": "nx run-many -t lint",
    "test": "nx run-many -t test",
    "ci:packages": "nx run-many -t build test lint typecheck --projects=@query-api",
    "ci:playgrounds": "nx run-many -t build test lint typecheck --projects=*-app",
    "prepare": "husky",
    "fix:prettier": "prettier \"**/*.{md,css,yml,yaml}\" \"{packages,playgrounds,tools,common}/**/*.{ts,js,mjs,cjs,mts,cts,jsx,tsx,astro,vue}\" --write",
    "release": "npx nx run-many -t build --projects=@query-api && tsx tools/release.ts",
    "clean:npm": "rimraf node_modules packages/*/node_modules playgrounds/*/node_modules",
    "clean:cache": "rimraf .nx",
    "clean:build": "rimraf build packages/*/dist playgrounds/*/dist packages/*/.nuxt playgrounds/*/.nuxt packages/*/.output playgrounds/*/.output",
    "clean": "npm run clean:cache && npm run clean:build && npm run clean:npm"
  },
  "devDependencies": {
    "@babel/core": "^7.14.5",
    "@babel/preset-react": "^7.14.5",
    "@eslint/eslintrc": "^2.1.1",
    "@eslint/js": "^9.8.0",
    "@nuxt/devtools": "2.5.0",
    "@nuxt/eslint-config": "~0.5.6",
    "@nuxt/kit": "^3.10.0",
    "@nuxt/module-builder": "^1.0.1",
    "@nuxt/ui-templates": "^1.3.1",
    "@nx/eslint": "21.2.1",
    "@nx/eslint-plugin": "21.2.1",
    "@nx/js": "21.2.1",
    "@nx/nuxt": "21.2.1",
    "@nx/react": "21.2.1",
    "@nx/vite": "21.2.1",
    "@nx/vue": "21.2.1",
    "@nx/web": "21.2.1",
    "@swc-node/register": "~1.9.1",
    "@swc/core": "~1.5.7",
    "@swc/helpers": "~0.5.11",
    "@testing-library/dom": "10.4.0",
    "@testing-library/react": "16.1.0",
    "@types/node": "^20.0.0",
    "@types/react": "19.0.0",
    "@types/react-dom": "19.0.0",
    "@typescript-eslint/parser": "^8.29.0",
    "@vitejs/plugin-react": "^4.2.0",
    "@vitejs/plugin-vue": "^5.2.3",
    "@vitest/coverage-v8": "^3.0.5",
    "@vitest/ui": "^3.0.0",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.5.1",
    "@vue/test-utils": "^2.4.6",
    "ajv": "^8.0.0",
    "eslint": "^9.8.0",
    "eslint-config-prettier": "^10.0.0",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-jsx-a11y": "6.10.1",
    "eslint-plugin-react": "7.35.0",
    "eslint-plugin-react-hooks": "5.0.0",
    "eslint-plugin-vue": "^9.16.1",
    "h3": "^1.8.2",
    "husky": "^9.1.7",
    "jiti": "2.4.2",
    "jsdom": "~22.1.0",
    "jsonc-eslint-parser": "^2.1.0",
    "less": "3.12.2",
    "lint-staged": "^16.1.0",
    "nuxt": "^3.10.0",
    "nx": "21.2.0",
    "prettier": "^3.5.3",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-router": "^7.6.2",
    "rimraf": "^6.0.1",
    "tslib": "^2.3.0",
    "tsx": "^4.20.3",
    "typescript": "~5.8.2",
    "typescript-eslint": "^8.29.0",
    "vite": "^6.0.0",
    "vite-plugin-dts": "~4.5.0",
    "vitest": "^3.0.0",
    "vue": "^3.5.13",
    "vue-router": "^4.5.0",
    "vue-tsc": "^2.2.8"
  },
  "lint-staged": {
    "(*.md|*.css|*.yml|*.yaml|*.ts|*.js|*.mjs|*.cjs|*.mts|*.cts|*.jsx|*.tsx|*.astro|*.vue)": "npm run fix:prettier"
  },
  "workspaces": [
    "packages/*",
    "playgrounds/*"
  ]
}

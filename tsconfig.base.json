{
  "compilerOptions": {
    "isolatedModules": true,
    "lib": ["ESNext", "dom", "dom.iterable"],
    "module": "Preserve",
    "moduleResolution": "bundler",
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "noEmit": true,
    "paths": {
      "@query-api/js": ["./packages/js/src/index.ts"],
      "@query-api/vue": ["./packages/vue/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "dist", "build"]
}

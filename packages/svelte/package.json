{
	"name": "@query-api/svelte",
	"version": "0.0.1",
	"type": "module",
	"license": "MIT",
	"description": "Craft CMS Query Builder for Svelte",
	"repository": "https://github.com/samuelreichor/query-api/tree/main/packages/svelte",
	"author": "Samuel Reichoer",
	"bugs": {
		"url": "https://github.com/samuelreichor/query-api/issues"
	},
	"homepage": "https://samuelreichor.at/libraries/query-api-svelte",
	"keywords": [
		"Craft CMS",
		"Query Builder",
		"Query API",
		"sveltejs"
	],
	"publishConfig": {
		"access": "public"
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"scripts": {
		"build": "vite build",
		"postbuild": "publint",
		"prepare": "echo 'Svelte library build ready'",
		"lint": "eslint .",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run",
		"typecheck": "tsc --noEmit"
	},
	"sideEffects": [
		"**/*.css"
	],
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"peerDependencies": {
		"svelte": "^5.0.0"
	},
	"dependencies": {
		"@query-api/js": "*"
	}
}

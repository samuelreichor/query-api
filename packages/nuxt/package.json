{
  "name": "@query-api/nuxt",
  "version": "0.0.1",
  "type": "module",
  "license": "MIT",
  "description": "Craft CMS Query Builder for Nuxt",
  "repository": "https://github.com/samuelreichor/query-api/tree/main/packages/nuxt",
  "author": "Samuel Reichoer",
  "bugs": {
    "url": "https://github.com/samuelreichor/query-api/issues"
  },
  "homepage": "https://samuelreichor.at/libraries/nuxt-craftcms",
  "keywords": [
    "Craft CMS",
    "Query Builder",
    "Query API",
    "Nuxt"
  ],
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/module.mjs",
  "module": "./dist/module.mjs",
  "types": "./dist/module.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "development": "./src/module.ts",
      "types": "./dist/module.d.ts",
      "import": "./dist/module.mjs",
      "default": "./dist/module.mjs"
    }
  },
  "scripts": {
    "prepack": "nuxt-module-build prepare",
    "typecheck": "vue-tsc  --project tsconfig.json",
    "build": "pnpm run typecheck && pnpm run build:transpile",
    "build:nuxt-module": "nuxt-module-build build --outDir dist",
    "build:transpile": "pnpm run build:nuxt-module",
    "build:tarball": "pnpm pack",
    "lint:fix": "eslint . --fix"
  },
  "peerDependencies": {
    "nuxt": ">=3.0.0 || 4.x"
  },
  "dependencies": {
    "@query-api/vue": "workspace:*",
    "@query-api/js": "workspace:*"
  },
  "devDependencies": {
    "@nuxt/module-builder": "^0.8.4",
    "nuxt": "^3.13.2",
    "@nuxt/kit": "^3.13.2",
    "unbuild": "^3.5.0",
    "defu": "6.1.4"
  }
}
